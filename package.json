{
    "name": "ifc-syntax",
    "displayName": "IFC Syntax",
    "description": "Extension that brings IFC (Industry Foundation Classes) support to VSCode",
    "repository": "https://github.com/AlanRynne/ifc-syntax.git",
    "icon": "https://github.com/AlanRynne/docs/assets/images/IFC-Syntax-Icon.png",
    "author": {
        "name": "Alan Rynne",
        "email": "alan@rynne.es",
        "url": "https://rynne.es"
    },
    "keywords": [
        "IFC",
        "Industry Foundation Classes",
        "BuildingSmart",
        "Building Information Modelling",
        "BIM"
    ],
    "version": "0.1.4",
    "publisher": "AlanRynne",
    "engines": {
        "vscode": "^1.37.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "activationEvents": [
        "onLanguage:exp",
        "onLanguage:ifc",
        "onCommand:ifcSyntax.sayHello",
        "workspaceContains:**/.ifcconfig",
        "workspaceContains:**/*.ifc"
    ],
    "main": "./client/out/extension.js",
    "contributes": {
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "ifc-explorer",
                    "title": "IFC Explorer",
                    "icon": "./assets/building-black.svg"
                }
            ]
        },
        "views": {
            "ifc-explorer": [
                {
                    "id": "ifcStructure",
                    "name": "Entity Tree"
                },
                {
                    "id": "ifcPSets",
                    "name": "Property Sets"
                },
                {
                    "id": "ifcHeader",
                    "name": "Header Data"
                }
            ]
        },
        "menus": {
            "editor/title": [
                {
                    "command": "ifcSyntax.openViewer",
                    "group": "navigation",
                    "when": "editorLangId == ifc"
                }
            ]
        },
        "commands": [
            {
                "command": "ifcSyntax.openViewer",
                "when": "editorLangId == ifc",
                "title": "IFC: Open in Viewer",
                "icon": "$(symbol-field)"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "IFC Syntax",
            "properties": {
                "ifcSyntax.maxNumberOfProblems": {
                    "scope": "resource",
                    "type": "number",
                    "default": 100,
                    "description": "Controls the maximum number of problems produced by the server."
                },
                "ifcSyntax.trace.server": {
                    "scope": "window",
                    "type": "string",
                    "enum": [
                        "off",
                        "messages",
                        "verbose"
                    ],
                    "default": "off",
                    "description": "Traces the communication between VS Code and the language server."
                }
            }
        },
        "languages": [
            {
                "id": "ifc",
                "aliases": [
                    "IFC",
                    "ifc"
                ],
                "extensions": [
                    ".ifc"
                ],
                "configuration": "./languages/ifc-language-configuration.json"
            },
            {
                "id": "json",
                "aliases": [
                    "cIFC",
                    "IFC Config"
                ],
                "extensions": [
                    ".ifcconfig"
                ]
            }
        ],
        "grammars": [
            {
                "language": "ifc",
                "scopeName": "source.ifc",
                "path": "./syntaxes/ifc.tmLanguage.json"
            },
            {
                "language": "exp",
                "scopeName": "source.express",
                "path": "./syntaxes/express.tmLanguage.json"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "cd client && npm run update-vscode && cd .. && npm run compile",
        "compile": "tsc -b",
        "watch": "tsc -b -w",
        "postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
        "test": "sh ./scripts/e2e.sh"
    },
    "devDependencies": {
        "@types/glob": "^7.1.1",
        "@types/mocha": "^5.2.6",
        "@types/node": "^10.12.21",
        "glob": "^7.1.4",
        "mocha": "^6.1.4",
        "tslint": "^5.12.1",
        "typescript": "^3.3.1",
        "vscode-test": "^1.0.0-next.0"
    }
}